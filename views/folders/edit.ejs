<% include ../partials/header %>
<% include ../partials/navbar %>
<div class='container'>
     <div class="page-header">
      <h1>Edit Folder</h1>
    </div>
    <div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="panel panel-login">
					<div class="panel-body">
						<div class="row">
							<div class="col-lg-12">
								<form id="login-form" action="/folders/<%= folderData._id %>?_method=PUT" method="post" role="form" style="display: block;">
									<div class="form-group">
										<input type="text" name="folder[name]" id="label" tabindex="1" class="form-control" value="<%= folderData.name %>">
									</div>
									<div class="form-group">
										<textarea name="folder[desc]" class='form-control' tabindex='3' placeholder='Description'><%= folderData.desc %></textarea>
									</div>
									<div class="form-group">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
												<input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-login" value="Submit">
											</div>
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<% include ../partials/footer %>