<% include ../partials/header %>
<% include ../partials/navbar %>
<div class='container'>
     <div class="page-header">
      <h1>Add a Contributor to <%= folder.name %></h1>
    </div>
    <div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="panel panel-login">
					<div class="panel-body">
						<div class="row">
							<div class="col-lg-12">
								<form onsubmit="return confirm('Press OK to add contributor to <%= folder.name %>.');" id="login-form" action="/folders/<%= folder._id %>/contributors" method="post" role="form" style="display: block;">
									<div class="form-group">
										<input type="text" name="email" id="label" tabindex="1" class="form-control" placeholder="Enter Contributor Email">
									</div>
									<div class="form-group">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
												<input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-login" value="Submit">
											</div>
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<% include ../partials/footer %>